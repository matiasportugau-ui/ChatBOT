# AUTO-ATC Playbook v3 - Variables de Entorno
# Copia este archivo a .env.chatwoot y .env.n8n con tus valores reales

# ==========================================
# CHATWOOT CONFIGURATION
# ==========================================

# Base URL de tu instalación Chatwoot
CHATWOOT_BASE_URL=http://localhost:3000

# Token de plataforma para API (obtenlo de Chatwoot -> Settings -> API)
CHATWOOT_PLATFORM_TOKEN=your_platform_token_here

# ID de cuenta Chatwoot
CHATWOOT_ACCOUNT_ID=1

# ID del inbox de WhatsApp
CHATWOOT_INBOX_ID=1

# URL del webhook para n8n (donde n8n recibe mensajes)
BOT_OUTGOING_URL=http://n8n:5678/webhook/chatwoot-incoming

# Configuración de base de datos (para Chatwoot)
POSTGRES_HOST=postgres
POSTGRES_USERNAME=atc_user
POSTGRES_PASSWORD_FILE=/run/secrets/postgres_password
POSTGRES_DATABASE=atc_db

# Redis configuration
REDIS_URL=redis://:redis_password@redis:6379/0

# ==========================================
# N8N CONFIGURATION
# ==========================================

# Base URL de n8n
N8N_HOST=http://localhost:5678

# Puerto de n8n
N8N_PORT=5678

# Protocolo (http para desarrollo, https para producción)
N8N_PROTOCOL=http

# Base de datos para n8n
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=atc_user
DB_POSTGRESDB_PASSWORD_FILE=/run/secrets/postgres_password
DB_POSTGRESDB_DATABASE=atc_db

# Redis para n8n
QUEUE_BULL_REDIS_HOST=redis
QUEUE_BULL_REDIS_PORT=6379
QUEUE_BULL_REDIS_PASSWORD_FILE=/run/secrets/redis_password

# Configuración básica de n8n
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_this_password

# URLs de servicios externos
RASA_URL=http://rasa:5005
QDRANT_URL=http://qdrant:6333

# ==========================================
# WHATSAPP BUSINESS API
# ==========================================

# Token de acceso WhatsApp Business API
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# ID del número de teléfono WhatsApp Business
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# Versión de la API de WhatsApp
WHATSAPP_API_VERSION=v18.0

# ==========================================
# OPENAI / AI CONFIGURATION
# ==========================================

# API Key de OpenAI para embeddings
OPENAI_API_KEY=your_openai_api_key

# Modelo de embeddings
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Nivel de logging (debug, info, warn, error)
LOG_LEVEL=info

# URL de webhook para notificaciones de error (Slack, Discord, etc.)
ERROR_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

